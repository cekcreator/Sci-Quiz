<%- include ('../partials/header') %>
<%- include ('../partials/menuMain') %>

<main>
    <div class="container" >
        <center><h1 style="position: center">World Leaderboard</h1></center>
        <center><h2>Here is the worlds best quiz takers</h2></center>
      <table class="table" >
        <thead>
            <tr>
              <th scope="col">Rank</th>
              <th scope="col">Name</th>
              <th scope="col">Score</th>
            </tr>
            <%let i = 1%>
        <% data.forEach(function(values)  {%>
            <tr>
              <td>
                <%=i%>
              </td>
              <td>
                <%=values.username%>
              </td>
              <td>
                <%=values.leaderboard%>
              </td>
              <% i++ %>
              <% }) %>
      </table>
    </div>
</main>    

