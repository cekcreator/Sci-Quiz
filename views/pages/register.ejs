<%- include ('../partials/header') %>
    <%- include ('../partials/menuLogin') %>

        <main>
            <div class="container">
                <h2 style="text-align: center">Welcome to the Quizzes Website</h2>
                <h3 style="text-align: center">Register Here</h3>
            </div>
            <div class="container">
                <h1>Register</h1>
                <form class="Register" id="event-modal-form" action="/register" method="POST">
                    <label for="username" class="form-label">Username</label>
                    <input type="username" id="username" name="username" class="form-control">

                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control">

                    <button id="submit_button" class="btn btn-primary" type="submit">Register</button>
                    <a href="./login" class="link-primary">Login</a>
                </form>
        </main>

        <%- include ('../partials/footer') %>