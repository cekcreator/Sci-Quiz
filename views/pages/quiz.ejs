<%- include ('../partials/header') %>
<%- include ('../partials/menuMain') %>


<main>
    <div class="container-fluid">
        <!DOCTYPE html>
            <style>
                div {
                background: linear-gradient(to bottom, #33ccff 0%, #ffd700 100%)
                }
            </style>
            <body>
                <br>
                <br>
                <center>
                  <MARQUEE style="FILTER: wave(add=5,phase=3,freq=2,strength=10)" scrollAmount=2 scrollDelay=5 direction=up
                    width=1200 height=300>
                    <FONT style="FONT-SIZE: 50px; FONT-FAMILY: monospace">
                      <CENTER><B>
                          <FONT color=dodgerblue>Welcome to Sciquiz!</FONT>
                        </B></CENTER>
                    </FONT>
                  </MARQUEE>
                </center>
                <div class="card">
                    <h1><%- question.question %></h1>
                    <table class="table">
                        <tbody>
                            <% for(let i = 0; i < question.answers.length; i++) {%>
                                <tr>
                                    <form method action="quiz">
                                        <button type="submit" id="answer" name="answer" value=<%-`"${question.answers[i]}"`%>> <%- question.answers[i]%> </button>
                                    </form>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </body>
        </html>
    </div>

</main>

<%- include ('../partials/footer') %>